<?xml version="1.0"?>
<config>

  <sections>
    <email_delivery translate="label" module="core">
      <label>Email Delivery</label>
      <tab>general</tab>
      <frontend_type>text</frontend_type>
      <sort_order>2000</sort_order>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>
      <groups>
        <gmail translate="label">
          <label>Truly Simple Gmail</label>
          <frontend_type>text</frontend_type>
          <sort_order>10</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <enable translate="label">
              <label>Use Gmail Delivery</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>10</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <comment>Use gmail as a mail transport for all site functions?</comment>
            </enable>
            <username translate="label">
              <label>Gmail Email Address</label>
              <frontend_type>text</frontend_type>
              <sort_order>20</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </username>
            <password translate="label">
              <label>Gmail Password</label>
              <frontend_type>password</frontend_type>
              <backend_model>adminhtml/system_config_backend_encrypted</backend_model>
              <sort_order>30</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <comment>This value will be encrypted and kept safe in the database.</comment>
            </password>
          </fields>
        </gmail>
      </groups>
    </email_delivery>
  </sections>

</config>
